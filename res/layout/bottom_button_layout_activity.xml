<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

  

        <RelativeLayout
            android:id="@+id/bottom_button_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bottom_bg"
            android:layout_alignParentBottom="true"
            android:padding="5dp" >

            <Button
                android:id="@+id/map_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="8dp"
                android:background="@drawable/orange_btn_bg"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text="@string/pos_search_button_text"
                android:textColor="#ffffff"
                android:textSize="25sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/msg_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="8dp"
                android:background="@drawable/orange_btn_bg"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text="@string/msg_send_button_text"
                android:textColor="#ffffff"
                android:textSize="25sp"
                android:textStyle="bold" />

            <com.v2tech.widget.FloatEditText
                android:id="@+id/edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/msg_button"
                android:layout_toRightOf="@+id/map_button"
                android:layout_alignTop="@+id/msg_button"
                android:layout_alignBottom="@+id/msg_button"
                android:ems="10"
                android:focusable="true"
                android:focusableInTouchMode="true" >
            </com.v2tech.widget.FloatEditText>
        </RelativeLayout>

     

</RelativeLayout>