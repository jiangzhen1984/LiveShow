<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/bottom_button_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:alpha="0.25"
            android:background="#000000" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text="@string/pos_search_button_text"
                android:textColor="#ffffff"
                android:textSize="25sp"
                android:textStyle="bold"
                android:visibility="invisible" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            >

            <TextView
                android:id="@+id/map_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="8dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text="@string/pos_search_button_text"
                android:textColor="@color/bottom_button_text_color"
                 android:textSize="@dimen/bottom_button_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/msg_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="8dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text="@string/msg_send_button_text"
                android:textColor="@color/bottom_button_text_color"
                android:textSize="@dimen/bottom_button_text_size"
                android:textStyle="bold" />

            <com.v2tech.widget.FloatEditText
                android:id="@+id/edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/msg_button"
                android:layout_alignTop="@+id/msg_button"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/msg_button"
                android:layout_toRightOf="@+id/map_button"
                android:textSize="15sp"
                android:ems="10"
                android:focusable="true"
                android:focusableInTouchMode="true" >
            </com.v2tech.widget.FloatEditText>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>