<?xml version="1.0" encoding="utf-8"?>
<com.v2tech.widget.P2PVideoMainLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <SurfaceView
        android:id="@+id/p2p_video_main_surfaceview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         />

    <LinearLayout
        android:id="@+id/p2p_video_main_btn_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingBottom="20dp" >

        <ImageView
            android:id="@+id/p2p_video_main_left_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:src="@drawable/video_call_decline_btn" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".2" >
        </LinearLayout>

        <ImageView
            android:id="@+id/p2p_video_main_right_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:src="@drawable/p2p_switch_camera_icon" />
    </LinearLayout>

</com.v2tech.widget.P2PVideoMainLayout>