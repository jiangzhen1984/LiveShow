<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/common_pop_up_arrow_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/common_pop_window_container"
        android:src="@drawable/common_pop_up_arrow_up" />

    <LinearLayout
        android:id="@+id/common_pop_window_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/common_pop_up_arrow_up"
        android:background="@drawable/title_bar_pop_up_window_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title_bar_item_share_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_bar_share_live"
            android:paddingLeft="@dimen/title_bar_item_hori_padding"
            android:paddingRight="@dimen/title_bar_item_hori_padding"
            android:paddingTop="@dimen/title_bar_item_veri_padding"
            android:paddingBottom="@dimen/title_bar_item_veri_padding" />
    </LinearLayout>

</RelativeLayout>