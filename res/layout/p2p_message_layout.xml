<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp" >

    <TextView
        android:id="@+id/p2p_message_layout_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="TextView"
        android:textColor="#a0a0a0"
        android:textSize="@dimen/p2p_message_time_text_size" />

    <LinearLayout
        android:id="@+id/p2p_message_left_ly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/p2p_message_padding_1"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="@dimen/p2p_message_body_margin_hor"
        android:layout_marginTop="5dp" >

        <ImageView
            android:id="@+id/p2p_message_left_avtar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:src="@drawable/p2p_message_avtar_male" />

        <LinearLayout
            android:id="@+id/p2p_message_left_content_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/message_bg_left"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/p2p_message_left_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:text=""
                android:textColor="#000000" />

            <ImageView
                 android:id="@+id/p2p_message_left_content_macro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:src="@drawable/audio_play_voice_left_frame3" />
        </LinearLayout>

        <TextView
            android:id="@+id/p2p_message_left_content_adr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/p2p_message_body_margin_hor"
            android:text="6&apos;"
            android:textColor="#c0c0c0" />
    </LinearLayout>
    
    
     <LinearLayout
        android:id="@+id/p2p_message_padding_1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        >
         
     </LinearLayout>

    <RelativeLayout
        android:id="@+id/p2p_message_right_ly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/p2p_message_padding_2"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="@dimen/p2p_message_body_margin_hor"
        android:layout_marginTop="5dp" >
        
        <ImageView
            android:id="@+id/p2p_message_right_avtar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
            android:src="@drawable/p2p_message_avtar_female" />

        <TextView
            android:id="@+id/p2p_message_right_content_adr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_toLeftOf="@+id/p2p_message_right_content_bg"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/p2p_message_body_margin_hor"
            android:text="6&apos;"
            android:textColor="#c0c0c0" />

        <LinearLayout
            android:id="@+id/p2p_message_right_content_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/message_bg_right"
            android:layout_toLeftOf="@+id/p2p_message_right_avtar"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="right"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/p2p_message_right_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:text=""
                android:textColor="#000000" />

            <ImageView
                 android:id="@+id/p2p_message_right_content_macro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:src="@drawable/audio_play_voice_right_frame3" />
        </LinearLayout>

        
    </RelativeLayout>
    
    <LinearLayout
        android:id="@+id/p2p_message_padding_2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal"
        >
         
     </LinearLayout>

</RelativeLayout>