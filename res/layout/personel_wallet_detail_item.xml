<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:id="@+id/personel_wallet_item_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/personel_user_item_padding" >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/personel_wallet_detail_item_text_margin_left"
            android:layout_marginStart="@dimen/personel_wallet_detail_item_text_margin_left"
            android:layout_marginTop="@dimen/personel_wallet_detail_item_text_margin_top"
            
             >

            <TextView
                android:id="@+id/personel_wallet_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="凌小小"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/personel_wallet_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/personel_wallet_name"
                android:layout_marginTop="@dimen/personel_wallet_detail_item_text_margin_top1"
                android:textSize="@dimen/personel_wallet_detail_item_date_text_size"
                android:text="2016-04-11 13:23:23" />

            <TextView
                android:id="@+id/personel_wallet_sum_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/personel_wallet_detail_item_date_text_size"
                android:textColor="#000000"
                android:text="-12.0" />

            
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/personel_wallet_detail_item_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/personel_wallet_item_ly"
        android:background="@color/common_sep_line" />

</RelativeLayout>