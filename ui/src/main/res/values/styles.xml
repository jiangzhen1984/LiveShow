<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Translucent.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Translucent.NoTitleBar.Fullscreen">
        <item name="android:fontFamily">fonts/mict.ttf</item>
        <item name="android:typeface">normal</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style> 
    
     <!-- Application theme. -->
    <style name="mict" >
        <item name="android:fontFamily">fonts/mict.ttf</item>
        <item name="android:typeface">normal</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>


    <style name="TitleBarPopupWindowAnim">
        <item name="@android:windowEnterAnimation">@anim/translation_down_to_up_related_self</item>
        <item name="@android:windowExitAnimation">@anim/translation_up_to_down_related_self</item>
    </style>

</resources>
