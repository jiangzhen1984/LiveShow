<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="@color/personal_frag_qr_code_bg"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="80dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="80dp"
            android:background="@color/personal_frag_item_bg">


            <ImageView
                android:id="@+id/personal_qr_code_avatar_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/avatar_female"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/personal_qr_code_avatar_img"
                android:id="@+id/personal_qr_code_name_layout"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/personal_qr_code_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/personal_frag_qr_code_text_color"
                    android:textSize="@dimen/personal_setting_frag_item_text_size"
                    android:text="幸运草的夏天"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/personel_item_gender_female"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center"
                    android:id="@+id/personal_qr_code_gender_icon"/>

                <TextView
                    android:id="@+id/personal_qr_code_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/personal_setting_frag_item_text_size"
                    android:textColor="@color/personal_frag_qr_code_text_color"
                    android:text="北京"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/personal_qr_code_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/personal_qr_code_bottom_text"
                android:layout_below="@+id/personal_qr_code_name_layout"
                android:layout_margin="10dp"
                android:scaleType="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/personal_setting_qr_code_bottom_text"
                android:textSize="@dimen/personal_setting_frag_item_text_size"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/personal_qr_code_bottom_text"
                android:layout_alignParentBottom="true"
                />

        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>
