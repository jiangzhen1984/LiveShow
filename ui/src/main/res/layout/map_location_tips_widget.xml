<?xml version="1.0" encoding="utf-8"?>
<com.v2tech.widget.MapLocationTipsWidget xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/map_location_tips_widget_bg" >

    <EditText
        android:id="@+id/map_location_tips_search_text_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/map_location_tips_widget_et_bg"
        android:ems="10"
        android:gravity="center"
        android:textColor="#a0a0a0"
        android:hint="@string/map_location_tips_text"
        android:textSize="13.5sp" >
    </EditText>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@+id/map_location_tips_search_text_et"
        android:layout_centerHorizontal="true"
        android:text="" />

</com.v2tech.widget.MapLocationTipsWidget>