<?xml version="1.0" encoding="utf-8"?>
<com.v2tech.widget.MessageMarqueeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/message_marquee_setting_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/message_marquee_enable" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/message_pool" >
    </LinearLayout>

</com.v2tech.widget.MessageMarqueeLinearLayout>