<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/personal_qr_code_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:background="@color/personel_setting_frag_layout_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/personal_qr_code_btn_style_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/personal_frag_qr_code_item_btn_bg_color"
            android:gravity="center"
            android:paddingBottom="@dimen/personal_setting_frag_qr_code_item_padding"
            android:paddingTop="@dimen/personal_setting_frag_qr_code_item_padding"
            android:text="@string/personal_setting_qr_code_btn_style_change_text"
            android:textColor="@color/personal_frag_qr_code_item_btn_text_color"
            android:textSize="@dimen/personal_setting_frag_item_text_size"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/common_sep_line"
            android:gravity="center"
            android:orientation="vertical">
        </LinearLayout>

        <TextView
            android:id="@+id/personal_qr_code_btn_pic_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/personal_frag_qr_code_item_btn_bg_color"
            android:gravity="center"
            android:paddingBottom="@dimen/personal_setting_frag_qr_code_item_padding"
            android:paddingTop="@dimen/personal_setting_frag_qr_code_item_padding"
            android:text="@string/personal_setting_qr_code_btn_pic_save_text"
            android:textColor="@color/personal_frag_qr_code_item_btn_text_color"
            android:textSize="@dimen/personal_setting_frag_item_text_size"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/common_sep_line"
            android:gravity="center"
            android:orientation="vertical">
        </LinearLayout>

        <TextView
            android:id="@+id/personal_qr_code_btn_qr_code_scan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/personal_frag_qr_code_item_btn_bg_color"
            android:gravity="center"
            android:paddingBottom="@dimen/personal_setting_frag_qr_code_item_padding"
            android:paddingTop="@dimen/personal_setting_frag_qr_code_item_padding"
            android:text="@string/personal_setting_qr_code_btn_qr_code_scan_change_text"
            android:textColor="@color/personal_frag_qr_code_item_btn_text_color"
            android:textSize="@dimen/personal_setting_frag_item_text_size"/>

        <TextView
            android:id="@+id/personal_qr_code_btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@color/personal_frag_qr_code_item_btn_bg_color"
            android:gravity="center"
            android:paddingBottom="@dimen/personal_setting_frag_qr_code_item_padding"
            android:paddingTop="@dimen/personal_setting_frag_qr_code_item_padding"
            android:text="@string/personal_setting_qr_code_btn_cancel_change_text"
            android:textColor="@color/personal_frag_qr_code_item_btn_text_color"
            android:textSize="@dimen/personal_setting_frag_item_text_size"/>

    </LinearLayout>

</LinearLayout>
