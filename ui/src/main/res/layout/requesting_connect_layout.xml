<?xml version="1.0" encoding="utf-8"?>
<com.v2tech.widget.RequestConnectLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/watcher_requesting_connect_ly_bg"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:src="@drawable/watcher_request_avatar_default" />

    <TextView
         android:id="@+id/request_connect_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:text="夏天"
        android:textSize="@dimen/request_connect_ly_name_text_size"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/request_connect_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:textSize="@dimen/request_connect_ly_tips_text_size"
        android:text="@string/requesting_connect_video_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="20dp" >

        <ImageView
            android:id="@+id/request_connect_left_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:src="@drawable/audio_call_decline_btn" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".2" >
        </LinearLayout>

        <ImageView
               android:id="@+id/request_connect_right_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:src="@drawable/audio_call_accept_btn" />
    </LinearLayout>

</com.v2tech.widget.RequestConnectLayout>