<?xml version="1.0" encoding="utf-8"?>
<com.v2tech.widget.P2PAudioLiverLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/p2p_audio_liver_map_ly"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical" >
    </LinearLayout>

    <ImageView
         android:id="@+id/p2p_map_return_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:padding="5dp"
        android:src="@drawable/video_share_map_return_btn" />

    <ImageView
        android:id="@+id/p2p_audio_liver_decline_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/p2p_audio_liver_bottom"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:src="@drawable/audio_call_decline_btn" />

    <LinearLayout
        android:id="@+id/p2p_audio_liver_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" >
    </LinearLayout>

</com.v2tech.widget.P2PAudioLiverLayout>