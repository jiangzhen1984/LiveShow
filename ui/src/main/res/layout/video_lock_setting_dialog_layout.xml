<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/video_lock_setting_dialog_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/video_lock_setting_dialog_layout_panel_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/video_lock_setting_dialog_banner_margin_top"
            android:text="@string/video_lock_setting_dialog_layout_banner_text"
            android:textColor="@color/video_lock_setting_dialog_layout_text_color"
            android:textSize="@dimen/video_lock_setting_dialog_banner_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/video_lock_setting_dialog_banner_margin_top"
            android:layout_marginLeft="@dimen/video_lock_setting_dialog_pwd_margin_left"
            android:layout_marginRight="@dimen/video_lock_setting_dialog_pwd_margin_right"
            android:layout_marginTop="@dimen/video_lock_setting_dialog_banner_margin_top"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/video_lock_pwd_1_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/video_lock_setting_dialog_pwd_edit_margin_gap"
                android:layout_weight=".25"
                android:background="@drawable/video_lock_setting_pwd_bg"
                android:ems="10"
                android:gravity="center"
                android:inputType="phone"
                android:focusableInTouchMode="true"
                android:maxLength="1" >

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/video_lock_pwd_2_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/video_lock_setting_dialog_pwd_edit_margin_gap"
                android:layout_weight=".25"
                android:background="@drawable/video_lock_setting_pwd_bg"
                android:ems="10"
                android:gravity="center"
                android:inputType="phone"
                android:maxLength="1" >
            </EditText>

            <EditText
                android:id="@+id/video_lock_pwd_3_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/video_lock_setting_dialog_pwd_edit_margin_gap"
                android:layout_weight=".25"
                android:background="@drawable/video_lock_setting_pwd_bg"
                android:ems="10"
                android:gravity="center"
                android:inputType="phone"
                android:maxLength="1" >
            </EditText>

            <EditText
                android:id="@+id/video_lock_pwd_4_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".25"
                android:background="@drawable/video_lock_setting_pwd_bg"
                android:ems="10"
                android:gravity="center"
                android:inputType="phone"
                android:maxLength="1" >
            </EditText>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/video_lock_close_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/video_lock_setting_dialog_panel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/video_lock_setting_dialog_close_btn_margin_top"
        android:src="@drawable/video_lock_setting_layout_close_btn" />

</RelativeLayout>